{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "nl.tammert.climacontrol",
  "version": "1.0.0",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "ClimaControl"
  },
  "description": {
    "en": "Control ClimaControl modules"
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Sebastiaan Tammer",
    "email": "sebastiaantammer@gmail.com"
  },
  "brandColor": "#00A8E1",
  "drivers": [
    {
      "name": {
        "en": "ClimaControl"
      },
      "discovery": "climacontrol",
      "class": "airconditioning",
      "capabilities": [
        "onoff",
        "measure_temperature",
        "target_temperature",
        "thermostat_mode",
        "measure_power",
        "meter_power",
        "measure_battery",
        "measure_humidity"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/climacontrol/assets/images/small.png",
        "large": "/drivers/climacontrol/assets/images/large.png",
        "xlarge": "/drivers/climacontrol/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 16,
          "max": 31,
          "step": 0.5
        },
        "thermostat_mode": {
          "values": [
            {
              "id": "heat",
              "title": {
                "en": "Heat"
              }
            },
            {
              "id": "cool",
              "title": {
                "en": "Cool"
              }
            },
            {
              "id": "auto",
              "title": {
                "en": "Auto"
              }
            },
            {
              "id": "fan",
              "title": {
                "en": "Fan"
              }
            },
            {
              "id": "dry",
              "title": {
                "en": "Dry"
              }
            }
          ]
        }
      },
      "id": "climacontrol"
    }
  ],
  "discovery": {
    "climacontrol": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "http",
        "protocol": "tcp"
      },
      "id": "{{host}}",
      "conditions": [
        [
          {
            "field": "name",
            "match": {
              "type": "regex",
              "value": "ClimaControl Web-UI"
            }
          }
        ]
      ]
    }
  }
}