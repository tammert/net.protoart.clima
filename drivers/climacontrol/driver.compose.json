{
  "name": {
    "en": "ClimaControl"
  },
  "discovery": "climacontrol",
  "class": "thermostat",
  "capabilities": [
    "onoff",
    "measure_temperature",
    "target_temperature",
    "thermostat_mode",
    "measure_power",
    "meter_power"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 16,
      "max": 31,
      "step": 0.5
    },
    "thermostat_mode": {
      "values": [
        {
          "id": "heat",
          "title": {
            "en": "Heat"
          }
        },
        {
          "id": "cool",
          "title": {
            "en": "Cool"
          }
        },
        {
          "id": "auto",
          "title": {
            "en": "Auto"
          }
        },
        {
          "id": "fan",
          "title": {
            "en": "Fan"
          }
        },
        {
          "id": "dry",
          "title": {
            "en": "Dry"
          }
        }
      ]
    }
  }
}
