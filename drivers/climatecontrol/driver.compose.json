{
  "name": {
    "en": "ClimateControl"
  },
  "discovery": "climatecontrol",
  "class": "airconditioning",
  "capabilities": [
    "onoff",
    "operating_mode",
    "fan_speed",
    "vane_mode",
    "wide_vane_mode",
    "target_temperature",
    "meter_power",
    "measure_power",
    "measure_temperature",
    "measure_temperature.outside",
    "measure_battery",
    "measure_humidity"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 16,
      "max": 31,
      "step": 0.5
    },
    "measure_temperature": {
      "title": {"en": "Temperature inside"}
    },
    "measure_temperature.outside": {
      "title": {"en": "Temperature outside"},
      "step": 1
    }
  }
}
